<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/default_6_dp">

    <ImageView
        android:id="@+id/ivLinkedin"
        android:layout_width="@dimen/default_25_dp"
        android:layout_height="@dimen/default_25_dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_linkedin" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/ivLinkedin"
        android:layout_toStartOf="@+id/ivLinkedin"
        android:textColor="@color/colorGray2"
        android:textSize="@dimen/default_16_sp"
        android:text="@string/text_developer_name" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_toLeftOf="@+id/ivLinkedin"
        android:layout_toStartOf="@+id/ivLinkedin"
        android:textColor="@color/colorGray2"
        android:textSize="@dimen/default_12_sp"
        tools:text="Líder Técnico | desenvolvedor" />

</RelativeLayout>